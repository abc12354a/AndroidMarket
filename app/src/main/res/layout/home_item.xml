<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    android:layout_margin="5dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
    <ImageView
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:id="@+id/home_item_image"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price:$00.00"
            android:id="@+id/home_item_price"
            android:textSize="20sp"
            android:layout_alignBottom="@+id/home_item_image"
            android:layout_alignParentEnd="true" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="home_item_name"
            android:textSize="24sp"
        android:id="@+id/home_item_name"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/home_item_image"
            android:layout_marginStart="19dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>