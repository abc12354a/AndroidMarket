<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abc12.navigationview.Login">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/frameLayout2">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/login_toolbar"
            android:background="@color/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/Theme.AppCompat.Light"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"></android.support.v7.widget.Toolbar>
    </FrameLayout>
    <RelativeLayout
        android:background="#90A4AE"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="5dp"
        android:layout_below="@+id/frameLayout2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:text="注册|登陆"
            android:textSize="30sp"
            android:gravity="center|bottom"
            android:id="@+id/textView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="100sp"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout4">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:weightSum="10"
                android:layout_below="@+id/textView"
                android:layout_alignParentStart="true"
                android:id="@+id/linearLayout3">
                <TextView
                    android:layout_width="0dp"
                    android:paddingRight="5dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:textSize="25sp"
                    android:gravity="right|center"
                    android:text="用户名"/>
                <EditText
                    android:id="@+id/login_username"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:textSize="20dp"
                    android:paddingLeft="5dp"
                    android:gravity="bottom|left"
                    android:hint="user_name"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:weightSum="10"
                android:layout_below="@+id/linearLayout3"
                android:layout_alignParentStart="true">
                <TextView
                    android:layout_width="0dp"
                    android:paddingRight="5dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:textSize="25sp"
                    android:gravity="right|center"
                    android:text="密码"/>

                <EditText
                    android:id="@+id/login_password"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:textSize="20dp"
                    android:paddingLeft="5dp"
                    android:gravity="bottom|left"
                    android:hint="pass_word"/>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:padding="10dp"
            android:layout_below="@+id/linearLayout4"
            android:layout_alignParentStart="true">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:id="@+id/login_login"
                android:text="登陆"
                android:textSize="18sp"
                android:textColor="#E0E0E0"
                android:layout_marginStart="36dp"
                android:layout_alignBaseline="@+id/login_register"
                android:layout_alignBottom="@+id/login_register"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:id="@+id/login_register"
                android:text="注册"
                android:textSize="18sp"
                android:textColor="#E0E0E0"
                android:layout_marginEnd="36dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:padding="5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="150dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:padding="5dp"
                android:text="帮助：用户名请用邮箱注册。若第一次使用，请先注册。系统会发送邮件到邮箱，注意查收。"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
