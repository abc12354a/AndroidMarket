<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemdetails"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.abc12.navigationview.ItemDetails"
    android:focusable="true"
    android:focusableInTouchMode="true" >
    <android.support.v7.widget.Toolbar
        android:id="@+id/detail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/Theme.AppCompat.Light">
    </android.support.v7.widget.Toolbar>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/detail_image"
        android:layout_below="@+id/detail_toolbar" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="+"
        android:id="@+id/detail_add"
        android:layout_alignBaseline="@+id/num"
        android:layout_alignBottom="@+id/num"
        android:layout_toEndOf="@+id/num" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/detail_sub"
        android:text="-"
        android:layout_alignBaseline="@+id/num"
        android:layout_alignBottom="@+id/num"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/num"
        android:hint="0"
        android:inputType="number"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/detail_sub"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="here's the name"
        android:textSize="24sp"
        android:paddingLeft="30dp"
        android:layout_below="@+id/detail_image"
        android:layout_alignParentStart="true"
        android:id="@+id/detail_title" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detail_detail"
        android:layout_below="@+id/detail_title"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/detail_add"
        android:hint="here's details"
        android:textSize="20sp"
        android:paddingLeft="30dp"/>

    <TextView
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:hint="$0"
        android:gravity="center"
        android:id="@+id/detail_price"
        android:layout_alignTop="@+id/detail_buy"
        android:layout_toEndOf="@+id/detail_add"
        android:layout_marginStart="55dp" />

    <Button
        android:layout_width="60sp"
        android:layout_height="40sp"
        android:text="buy"
        android:id="@+id/detail_buy"
        android:layout_below="@+id/detail_detail"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show"
        android:layout_alignBaseline="@+id/detail_buy"
        android:layout_alignBottom="@+id/detail_buy"
        android:layout_toStartOf="@+id/detail_buy"
        android:layout_marginEnd="26dp"
        android:id="@+id/showtest" />
</RelativeLayout>
